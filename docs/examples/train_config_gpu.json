{
    "vocab_fp": "cnocr/label_cn.txt",
    "img_folder": "data/output_normal",

    "devices": 1,
    "accelerator": "gpu",
    "epochs": 40,
    "batch_size": 100,
    "num_workers": 12,
    "pin_memory": true,
    "optimizer": "adam",
    "learning_rate": 3e-3,
    "weight_decay": 0,
    "metrics": {
        "complete_match": {},
        "cer": {}
    },
    "lr_scheduler": {
        "name": "cos_warmup",
        "min_lr_mult_factor": 0.01,
        "warmup_epochs": 0.2,
        "milestones": [5, 10, 16, 22, 30],
        "gamma": 0.5
    },
    "precision": 16,
    "limit_train_batches": 1.0,
    "limit_val_batches": 1.0,
    "pl_checkpoint_monitor": "val-complete_match-epoch",
    "pl_checkpoint_mode": "max"
}
